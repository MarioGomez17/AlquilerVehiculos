@model List<ModeloTipoVehiculo>;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/GestionarAplicacion.css">
    <title>GESTIONAR MARCAS</title>
</head>

<body class="BodyGestionarAplicacion">
    <div class="ContenidoBodyGestionarAplicacion">
        <div class="DivBarraNavegacionGestionarAplicacion">
            <nav class="BarraNavegacionGestionarAplicacion">
                <div class="DivLinkLogoGestionarAplicacion">
                    <a asp-controller="Inicio" asp-action="Inicio">
                        <img class="ImagenLogo" src="~/imagenes/Logo.webp" alt="Logotipo" />
                    </a>
                </div>
                <div class="DivLinkGestionarAplicacion">
                    <a asp-controller="Usuario" asp-action="IniciarSesion" class="LinkGestionarAplicacion">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="icon icon-tabler icon-tabler-login-2 IconoSVGLink" width="35" height="35"
                            viewBox="0 0 24 24" stroke-width="1.5" stroke="#1f9102" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M9 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2" />
                            <path d="M3 12h13l-3 -3" />
                            <path d="M13 15l3 -3" />
                        </svg>
                        <span class="TextoLinkGestionarAplicacion">Iniciar Sesión</span>
                    </a>
                </div>
                <div class="DivLinkGestionarAplicacion">
                    <a asp-controller="Usuario" asp-action="InformacionUsuario" class="LinkGestionarAplicacion">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user IconoSVGLink"
                            width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#020291" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        </svg>
                        <span class="TextoLinkGestionarAplicacion">Ver Mi Perfil</span>
                    </a>
                </div>
                <div class="DivLinkGestionarAplicacion">
                    <a asp-controller="Vehiculo" asp-action="InformacionVehiculos" class="LinkGestionarAplicacion">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-car IconoSVGLink"
                            width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#beac0d" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                            <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                            <path d="M5 17h-2v-6l2 -5h9l4 5h1a2 2 0 0 1 2 2v4h-2m-4 0h-6m-6 -6h15m-6 0v-5" />
                        </svg>
                        <span class="TextoLinkGestionarAplicacion">Ver Mis Vehiculos</span>
                    </a>
                </div>
                <div class="DivLinkGestionarAplicacion">
                    @if (ViewBag.AlquileresPendientes > 0)
                    {
                        <a asp-controller="Alquiler" asp-action="HistorialAlquileres" class="LinkGestionarAplicacion">
                            <div class="DivAlquieleresPendientes">
                                <p class="AlquieleresPendientes">
                                    @ViewBag.AlquileresPendientes
                                </p>
                            </div>
                            <span class="TextoLinkGestionarAplicacion">Ver Mis Alquileres</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Alquiler" asp-action="HistorialAlquileres" class="LinkGestionarAplicacion">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="icon icon-tabler icon-tabler-history IconoSVGLink" width="35" height="35"
                                viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round"
                                stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M12 8l0 4l2 2" />
                                <path d="M3.05 11a9 9 0 1 1 .5 4m-.5 5v-5h5" />
                            </svg>
                            <span class="TextoLinkGestionarAplicacion">Ver Mis Alquileres</span>
                        </a>
                    }
                </div>
                <div class="DivLinkGestionarAplicacion">
                    <a asp-controller="Usuario" asp-action="CerrarSesion" class="LinkGestionarAplicacion">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login IconoSVGLink"
                            width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#be0d0d" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M15 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                            <path d="M21 12h-13l3 -3" />
                            <path d="M11 15l-3 -3" />
                        </svg>
                        <span class="TextoLinkGestionarAplicacion">Cerrar Sesión</span>
                    </a>
                </div>
            </nav>
        </div>
        <div class="DivContenidoGestionarAplicacion">
            <div class="DivEncabezadoGestionarAplicacion">
                <header class="EncabezadoGestionarAplicacion">
                    <h1 class="TituloPrincipalGestionarAplicacion">Alquiler de Vehículos</h1>
                </header>
            </div>
            <div class="DivContenidoPrincipalGestionarAplicacion">
                <div class="DivPrincipalGestionarAplicacion">
                    <main role="main" class="PrincipalGestionarAplicacion">
                        <div class="ContenidoPrincipalGestionarAplicacion">
                            <div class="DivFormularioGestion">
                                <form asp-action="AccionAgregarMarca" asp-controller="Administrador"
                                    class="FormularioAgregar">
                                    <div class="DivEtiquetaInput">
                                        <select name="Tipo" id="Tipo" class="SelectFormularioAgregar">
                                            <option value="0" class="OptionSelectFormularioAgregar" selected disabled>
                                                Seleccione un Tipo de Vehículo
                                            </option>
                                            @foreach (var Tipo in Model)
                                            {
                                                <option value="@Tipo.Id" class="OptionSelectFormularioAgregar">
                                                    @Tipo.Nombre</option>
                                            }
                                        </select>
                                        <label for="Tipo" class="EtiquetaFormulario">Tipos de Vehículo</label>
                                    </div>
                                    <div class="DivEtiquetaInput">
                                        <input type="text" name="Marca" class="InputFormularioAgregar" id="Marca">
                                        <label for="Marca" class="EtiquetaFormulario">Marca</label>
                                    </div>
                                    <input type="submit" value="Agregar Marca" class="BotonFormularioAgregar">
                                </form>
                            </div>
                            <div class="DivInformacionGestion">
                                @foreach (var TipoVehiculo in Model)
                                {
                                    <h3 class="TituloLista">@TipoVehiculo.Nombre</h3>
                                    @foreach (var Marca in TipoVehiculo.Marcas)
                                    {
                                        <ul class="ListaExistentes">
                                            <li class="NombreExistentes">
                                                <form asp-action="AccionActualizarMarca" asp-controller="Administrador"
                                                    class="FormularioActualizar">
                                                    <input type="hidden" name="Id" value="@Marca.Id">
                                                    <input type="text" name="Marca" value="@Marca.Nombre"
                                                        class="InputFormularioActualizar">
                                                    <input type="submit" value="Actualizar" class="BotonFormularioActualizar">
                                                </form>
                                            </li>
                                        </ul>
                                    }
                                }
                            </div>
                        </div>
                    </main>
                </div>
            </div>
            <div class="DivFooterGestionarAplicacion">
                <footer class="FooterGestionarAplicacion">
                    <span class="TextoFooterGestionarAplicacion">
                        &copy; 2024 - Alquiler de Vehículos por Mario Gómez y Juan Diego Claros
                    </span>
                </footer>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/GestionarAplicacion.js" type="module"></script>
</body>

</html>