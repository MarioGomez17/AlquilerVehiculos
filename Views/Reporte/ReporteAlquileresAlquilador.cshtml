@model List<ModeloAlquiler>;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" Contenido="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Reporte.css" />
    <title>REPORTE ALQUILERES REALIZADOS</title>
</head>

<body class="BodyReporteAlquileresAlquilador">
    <div class="ContenidoBodyReporteAlquileresAlquilador">
        <table class="table table-bordered table-hover TablaReporte">
            <thead class="EncabezadoTabla">
                <tr>
                    <th scope="col" class="CeldaTabla">#</th>
                    <th scope="col" class="CeldaTabla">Fecha Inicio</th>
                    <th scope="col" class="CeldaTabla">Fecha Fin</th>
                    <th scope="col" class="CeldaTabla">Precio</th>
                    <th scope="col" class="CeldaTabla">Vehículo</th>
                    <th scope="col" class="CeldaTabla">Lugar</th>
                    <th scope="col" class="CeldaTabla">Método de Pago</th>
                    <th scope="col" class="CeldaTabla">Estado del Pago</th>
                    <th scope="col" class="CeldaTabla">Seguro</th>
                    <th scope="col" class="CeldaTabla">Estado</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int Indice = 1;
                    foreach (var Alquiler in Model)
                    {
                        <tr>
                            <th scope="row" class="CeldaTabla">@Indice</th>
                            <td class="CeldaTabla">@Alquiler.FechaIncio</td>
                            <td class="CeldaTabla">@Alquiler.FechaFin</td>
                            <td class="CeldaTabla">@Alquiler.Precio</td>
                            <td class="CeldaTabla">@Alquiler.Vehiculo.TipoVehiculo @Alquiler.Vehiculo.Marca
                                @Alquiler.Vehiculo.Linea</td>
                            <td class="CeldaTabla">@Alquiler.Lugar</td>
                            <td class="CeldaTabla">@Alquiler.MetodoPago</td>
                            <td class="CeldaTabla">@Alquiler.EstadoPago</td>
                            <td class="CeldaTabla">@Alquiler.Seguro (@Alquiler.PrecioSeguro)</td>
                            <td class="CeldaTabla">@Alquiler.Estado</td>
                        </tr>
                        Indice++;
                    }
                }
            </tbody>
        </table>
        <div class="DivLinksExportar">
            <a class="LinkReporte LinkReporteCorreo">
                <span class="TextoLink">
                    Eviar Por Correo
                </span>
                <span class="Icono">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-mail IconoSVG"
                        width="55" height="55" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                        <path d="M3 7l9 6l9 -6" />
                    </svg>
                </span>
            </a>
            <a class="LinkReporte LinkReportePDF" asp-controller="Reporte" asp-action="GenerarReportePDF">
                <span class="TextoLink">
                    Generar PDF
                </span>
                <span class="Icono">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-text IconoSVG"
                        width="55" height="55" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M14 3v4a1 1 0 0 0 1 1h4" />
                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
                        <path d="M9 9l1 0" />
                        <path d="M9 13l6 0" />
                        <path d="M9 17l6 0" />
                    </svg>
                </span>
            </a>
            <a class="LinkReporte LinkReporteExcel">
                <span class="TextoLink">
                    Generar Excel
                </span>
                <span class="Icono">
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-file-spreadsheet IconoSVG" width="55" height="55"
                        viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round"
                        stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M14 3v4a1 1 0 0 0 1 1h4" />
                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
                        <path d="M8 11h8v7h-8z" />
                        <path d="M8 15h8" />
                        <path d="M11 11v7" />
                    </svg>
                </span>
            </a>
        </div>
    </div>
</body>

</html>