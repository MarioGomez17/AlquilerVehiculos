@model ModeloRegistrarVehiculo;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/RegistrarVehiculo.css">
    <title>REGISTRAR VEHÍCULO</title>
</head>

<body class="BodyRegistrarVehiculo">
    <div class="ContenidoBodyRegistrarVehiculo">
        <div class="DivBarraNavegacionRegistrarVehiculo">
            <nav class="BarraNavegacionRegistrarVehiculo">
                <div class="LinkLogoRegistrarVehiculo">
                    <a asp-controller="Inicio" asp-action="Inicio"><img class="ImagenLogo" src="~/imagenes/Logo.webp"
                            alt="Logotipo" /></a>
                </div>
                <div class="DivLinkRegistrarVehiculo">
                    <a asp-controller="Usuario" asp-action="IniciarSesion" class="LinkRegistrarVehiculo">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="icon icon-tabler icon-tabler-login-2 IconoLinkSVG" width="35" height="35"
                            viewBox="0 0 24 24" stroke-width="1.5" stroke="#1f9102" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M9 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2" />
                            <path d="M3 12h13l-3 -3" />
                            <path d="M13 15l3 -3" />
                        </svg>
                        <span class="TextoLinkRegistrarVehiculo">Iniciar Sesión</span>
                    </a>
                </div>
                <div class="DivLinkRegistrarVehiculo">
                    <a asp-controller="Usuario" asp-action="InformacionUsuario" class="LinkRegistrarVehiculo">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user IconoLinkSVG"
                            width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#020291" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        </svg>
                        <span class="TextoLinkRegistrarVehiculo">Ver Mi Perfil</span>
                    </a>
                </div>
                <div class="DivLinkRegistrarVehiculo">
                    <a asp-controller="Vehiculo" asp-action="InformacionVehiculos" class="LinkRegistrarVehiculo">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-car IconoLinkSVG"
                            width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#beac0d" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                            <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                            <path d="M5 17h-2v-6l2 -5h9l4 5h1a2 2 0 0 1 2 2v4h-2m-4 0h-6m-6 -6h15m-6 0v-5" />
                        </svg>
                        <span class="TextoLinkRegistrarVehiculo">Ver Mis Vehiculos</span>
                    </a>
                </div>
                <div class="DivLinkRegistrarVehiculo">
                    <a asp-controller="Alquiler" asp-action="HistorialAlquileres" class="LinkRegistrarVehiculo">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="icon icon-tabler icon-tabler-history IconoLinkSVG" width="35" height="35"
                            viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M12 8l0 4l2 2" />
                            <path d="M3.05 11a9 9 0 1 1 .5 4m-.5 5v-5h5" />
                        </svg>
                        <span class="TextoLinkRegistrarVehiculo">Ver Mis Alquileres</span>
                    </a>
                </div>
                <div class="DivLinkRegistrarVehiculo">
                    <a asp-controller="Usuario" asp-action="CerrarSesion" class="LinkRegistrarVehiculo">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login IconoLinkSVG"
                            width="35" height="35" viewBox="0 0 24 24" stroke-width="1.5" stroke="#be0d0d" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M15 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                            <path d="M21 12h-13l3 -3" />
                            <path d="M11 15l-3 -3" />
                        </svg>
                        <span class="TextoLinkRegistrarVehiculo">Cerrar Sesión</span>
                    </a>
                </div>
            </nav>
        </div>
        <div class="DivContenidoRegistrarVehiculo">
            <div class="DivEncabezadoRegistrarVehiculo">
                <header class="EncabezadoRegistrarVehiculo">
                    <h1 class="TituloPrincipalRegistrarVehiculo">Alquiler de Vehículos</h1>
                </header>
            </div>
            <div class="DivContenidoPrincipalRegistrarVehiculo">
                <div class="DivPrincipalRegistrarVehiculo">
                    <main role="main" class="PrincipalRegistrarVehiculo">
                        <div class="ContenidoPrincipalRegistrarVehiculo">
                            <div class="DivErrorViewBag">
                                @if (ViewBag.Message != null)
                                {
                                    <h3 class="ErroViewBag">@ViewBag.Message</h3>
                                }
                            </div>
                            <form method="post" class="FormularioVehiculo" asp-controller="Vehiculo"
                                asp-action="AccionRegistrarVehiculo" enctype="multipart/form-data">
                                <div class="DivComponentesConFoto">
                                    <div class="ComponentesFormulario">
                                        <div class="GrupoComponentes">
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario InputCorto" type="text" name="Placa"
                                                    value="" id="Placa" />
                                                <label class="EtiquetaFormulario" for="Placa">Placa</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario InputCorto" type="text" name="Cilindrada"
                                                    value="" id="Cilindrada" />
                                                <label class="EtiquetaFormulario" for="Cilindrada">Cilindrada
                                                    (CC)</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario InputCorto" type="text" name="Modelo"
                                                    value="" id="Modelo" />
                                                <label class="EtiquetaFormulario" for="Modelo">Modelo</label>
                                            </div>
                                        </div>
                                        <div class="GrupoComponentes">
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario InputCorto" type="text"
                                                    name="PrecioAlquilerDia" value="" id="PrecioAlquilerDia" />
                                                <label class="EtiquetaFormulario" for="PrecioAlquilerDia">
                                                    Precio de Alquiler
                                                </label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario InputCorto" type="text" name="Color"
                                                    value="" id="Color" />
                                                <label class="EtiquetaFormulario" for="Color">Color</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario InputCorto" type="text"
                                                    name="CantidadPasajeros" value="" />
                                                <label class="EtiquetaFormulario" for="CantidadPasajeros"># de
                                                    Pasajeros</label>
                                            </div>
                                        </div>
                                        <div class="GrupoComponentes">
                                            <div class="DivEtiquetaInput">
                                                <select class="SelectFormulario" id="TipoVehiculo">
                                                    <option selected value=0 class="OptionSelect">
                                                        Seleccione un Tipo
                                                    </option>
                                                    @foreach (var TipoVehiculo in Model.TipoVehiculos)
                                                    {
                                                        <option value=@TipoVehiculo.Id class="OptionSelect">
                                                            @TipoVehiculo.Nombre
                                                        </option>
                                                    }
                                                </select>
                                                <label class="EtiquetaFormulario" for="TipoVehiculo">Tipo de
                                                    Vehículo</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <select class="SelectFormulario" id="ClasificacionVehiculo"
                                                    name="ClasificacionVehiculo">
                                                    <option selected value=0 class="OptionSelect">
                                                        Seleccione una Clasificación
                                                    </option>
                                                    @foreach (var Clasificacion in Model.ClasificacionesVehículo)
                                                    {
                                                        <option value=@Clasificacion.Id class="OptionSelect">
                                                            @Clasificacion.Nombre
                                                        </option>
                                                    }
                                                </select>
                                                <label class="EtiquetaFormulario" for="ClasificacionVehiculo">
                                                    Clasificación del Vehículo
                                                </label>
                                            </div>
                                        </div>
                                        <div class="GrupoComponentes">
                                            <div class="DivEtiquetaInput">
                                                <select class="SelectFormulario" id="Marca">
                                                    <option selected value=0 class="OptionSelect">
                                                        Seleccione una Marca
                                                    </option>
                                                    @foreach (var Marca in Model.Marcas)
                                                    {
                                                        <option value=@Marca.Id class="OptionSelect">
                                                            @Marca.Nombre
                                                        </option>
                                                    }
                                                </select>
                                                <label class="EtiquetaFormulario" for="Marca">Marca</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <select class="SelectFormulario" id="Linea" name="Linea">
                                                    <option selected value=0 class="OptionSelect">
                                                        Seleccione una Línea
                                                    </option>
                                                    @foreach (var Linea in Model.Lineas)
                                                    {
                                                        <option value=@Linea.Id class="OptionSelect">
                                                            @Linea.Nombre
                                                        </option>
                                                    }
                                                </select>
                                                <label class="EtiquetaFormulario" for="Linea">Línea</label>
                                            </div>
                                        </div>
                                        <div class="GrupoComponentes">
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario" type="text" name="NumeroCertificadoCDA"
                                                    value="" id="NumeroCertificadoCDA" />
                                                <label class="EtiquetaFormulario" for="NumeroCertificadoCDA">Número de
                                                    Certificado CDA</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <input class="InputFormulario" type="text" name="NumeroSeguro" value=""
                                                    id="NumeroPolizaSeguro" />
                                                <label class="EtiquetaFormulario" for="NumeroPolizaSeguro">Número de
                                                    Póliza
                                                    de Seguro</label>
                                            </div>
                                        </div>
                                        <div class="GrupoComponentes">
                                            <div class="DivEtiquetaInput">
                                                <select class="SelectFormulario" id="TipoCombustible"
                                                    name="TipoCombustible">
                                                    <option selected value=0 class="OptionSelect">
                                                        Seleccione un Tipo de Combustible
                                                    </option>
                                                    @foreach (var TipoCombustible in Model.Combustibles)
                                                    {
                                                        <option value=@TipoCombustible.Id class="OptionSelect">
                                                            @TipoCombustible.Nombre
                                                        </option>
                                                    }
                                                </select>
                                                <label class="EtiquetaFormulario" for="TipoCombustible">Tipo de
                                                    Combustible</label>
                                            </div>
                                            <div class="DivEtiquetaInput">
                                                <select class="SelectFormulario" id="Ciudad" name="Ciudad">
                                                    <option selected value=0 class="OptionSelect">
                                                        Seleccione una Ciudad
                                                    </option>
                                                    @foreach (var Ciudad in Model.Ciudades)
                                                    {
                                                        <option value=@Ciudad.Id class="OptionSelect">
                                                            @Ciudad.Nombre
                                                        </option>
                                                    }
                                                </select>
                                                <label class="EtiquetaFormulario" for="Ciudad">Ciudad</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="DivFotoVehiculo">
                                        <img class="FotoVehiculo" src="~/FotoVehiculos/FotoBlanco.png" alt="Foto Vacia"
                                            id="EspacioFotoVehiculo" />
                                        <div class="DivInputFoto">
                                            <input class="InputFotoVehiculo" type="file" id="FotoVehiculo"
                                                name="FotoVehiculo" accept="image/*">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="IconoSubirFoto" width="45"
                                                height="45" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000"
                                                fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                <path
                                                    d="M7 18a4.6 4.4 0 0 1 0 -9a5 4.5 0 0 1 11 2h1a3.5 3.5 0 0 1 0 7h-1" />
                                                <path d="M9 15l3 -3l3 3" />
                                                <path d="M12 12l0 9" />
                                            </svg>
                                        </div>
                                        <label class="EtiquetaFormulario" for="FotoVehiculo">Seleccionar Foto</label>
                                    </div>
                                </div>
                                <div class="ComponentesBotones">
                                    <div class="GrupoBotones">
                                        <input class="BotonFormularioRegistrar" type="submit"
                                            id="BotonRegistrarVehiculo" value="Registrar Vehículo" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </main>
                </div>
            </div>
            <div class="DivFooterRegistrarVehiculo">
                <footer class="FooterRegistrarVehiculo">
                    <span class="TextoFooterRegistrarVehiculo">
                        &copy; 2024 - Alquiler de Vehículos por Mario Gómez y Juan Diego Claros
                    </span>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/js/RegistrarVehiculo.js"></script>
</body>

</html>